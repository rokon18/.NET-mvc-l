    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="/Order/Cart">go cart</a>
@foreach (var item in Model)
{
    <div class="col-sm-2">
        <div class="card" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">

                <h5 class="card-title">@item.Name</h5>
